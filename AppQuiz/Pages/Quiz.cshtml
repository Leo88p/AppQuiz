@page "{currentQuestionIndex:int=0}/{score:int=0}/{showResult:bool=false}/{isComplete:bool=false}"
@model QuizModel
@{
    ViewData["Title"] = "Викторина";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">@Model.TopicName</h3>
                        <div>
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <span class="me-3">Здравствуйте, @User.Identity.Name!</span>
                            }
                        </div>
                    </div>
                    <div class="mt-2">
                        <span>Вопрос @(Model.CurrentQuestionIndex + 1) из @Model.TotalQuestions</span>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.IsComplete)
                    {
                        <!-- Страница результатов -->
                        <div class="text-center">
                            <h2 class="mb-4">Результаты викторины</h2>
                            <div class="display-1 text-primary mb-4">@Model.Score из @Model.TotalQuestions</div>
                            <div class="progress mb-4">
                                @{
                                    var percentage = Model.TotalQuestions > 0 ? (double)Model.Score / Model.TotalQuestions * 100 : 0;
                                }
                                <div class="progress-bar bg-success" role="progressbar" style="width: @percentage%">
                                    @percentage.ToString("0.0")%
                                </div>
                            </div>
                            <p class="lead">
                                @if (percentage >= 80)
                                {
                                    <span class="text-success">Отличный результат! Вы настоящий знаток!</span>
                                }
                                else if (percentage >= 60)
                                {
                                    <span class="text-primary">Хороший результат! Продолжайте в том же духе!</span>
                                }
                                else
                                {
                                    <span class="text-warning">Неплохо! Попробуйте пройти викторину еще раз.</span>
                                }
                            </p>
                            <form method="post" asp-page-handler="FinishQuiz">
                                <button type="submit" class="btn btn-primary btn-lg">Вернуться на главную</button>
                            </form>
                        </div>
                    }
                    else if (Model.ShowResult)
                    {
                        <!-- Результат текущего вопроса -->
                        <div class="text-center">
                            <h3 class="mb-4">Ваш ответ на вопрос @(Model.CurrentQuestionIndex + 1) из @Model.TotalQuestions</h3>
                            <div class="mb-4">
                                <p class="lead">@(Model.CurrentQuestion?.Text ?? "Вопрос недоступен")</p>
                            </div>
                            <div class="mb-4">
                                @if (Model.IsCorrect)
                                {
                                    <div class="alert alert-success">
                                        <h4>Правильно!</h4>
                                        <p>Ваш ответ: @Model.UserAnswer</p>
                                        <p>Правильный ответ: @Model.CorrectAnswer</p>
                                        <p>Модель эмбеддингов: <strong>@Model.SelectedEmbeddingModel</strong></p>
                                        <div class="mt-3">
                                            <p>Сходство ответов: <strong>@($"{Model.SimilarityScore * 100:0.0}")%</strong></p>
                                            @if (Model.SimilarityScore < 1.0)
                                            {
                                                <p class="text-warning">Вы ответили правильно, но можно было быть точнее.</p>
                                            }
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-danger">
                                        <h4>Неправильно!</h4>
                                        <p>Ваш ответ: @Model.UserAnswer</p>
                                        <p>Правильный ответ: @Model.CorrectAnswer</p>
                                        <p>Модель эмбеддингов: <strong>@Model.SelectedEmbeddingModel</strong></p>
                                        <div class="mt-3">
                                            <p>Сходство ответов: <strong>@($"{Model.SimilarityScore * 100:0.0}")%</strong></p>
                                            @if (Model.SimilarityScore >= 0.5)
                                            {
                                                <p class="text-warning">Вы были близки! Попробуйте уточнить ваш ответ.</p>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                            
                            <!-- Добавляем кнопки для повтора вопроса или перехода к следующему -->
                            <div class="d-flex justify-content-between mt-4">
                                <form method="post" asp-page-handler="RetryQuestion">
                                    <input type="hidden" name="CurrentQuestionIndex" value="@Model.CurrentQuestionIndex" />
                                    <input type="hidden" name="Score" value="@Model.Score" />
                                    <input type="hidden" name="ShowResult" value="true" />
                                    <input type="hidden" name="IsComplete" value="false" />
                                    <input type="hidden" name="SelectedEmbeddingModel" value="@Model.SelectedEmbeddingModel" />
                                    <button type="submit" class="btn btn-secondary btn-lg">Попробовать еще раз</button>
                                </form>
                                
                                <form method="post" asp-page-handler="NextQuestion">
                                    <input type="hidden" name="CurrentQuestionIndex" value="@Model.CurrentQuestionIndex" />
                                    <input type="hidden" name="Score" value="@Model.Score" />
                                    <input type="hidden" name="ShowResult" value="false" />
                                    <input type="hidden" name="IsComplete" value="false" />
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        @(Model.CurrentQuestionIndex + 1 < Model.TotalQuestions ? "Следующий вопрос" : "Завершить викторину")
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Текущий вопрос -->
                        <form method="post">
                            <div>
                                <h3 class="mb-4">Вопрос @(Model.CurrentQuestionIndex + 1) из @Model.TotalQuestions</h3>
                                <div class="mb-4">
                                    <p class="lead">@(Model.CurrentQuestion?.Text ?? "Вопрос недоступен")</p>
                                    <p class="text-muted small">Совет: Не беспокойтесь о точном совпадении формулировок. Система оценивает смысл вашего ответа.</p>
                                
                                    <!-- Выбор модели эмбеддингов -->
                                    <div class="mt-3 p-3 bg-light rounded">
                                        <label class="form-label fw-bold">Модель для анализа ответа:</label>
                                        <select class="form-select" name="SelectedEmbeddingModel" id="embeddingModelSelect">
                                            @foreach (var model in Model.AvailableEmbeddingModels)
                                            {
                                                <option value="@(model.Value)" selected="@(model.Value == Model.SelectedEmbeddingModel)">
                                                    @(model.Text)
                                                </option>
                                            }
                                        </select>
                                        <p class="text-muted small mt-2 mb-0">
                                            <small>Выберите модель для сравнения вашего ответа с правильным. Разные модели могут давать разные результаты.</small>
                                        </p>
                                    </div>
                                </div>
                                <input type="hidden" name="CurrentQuestionIndex" value="@Model.CurrentQuestionIndex" />
                                <input type="hidden" name="Score" value="@Model.Score" />

                                <div class="mb-3">
                                    <label for="userAnswer" class="form-label">Ваш ответ:</label>
                                    <input type="text" class="form-control form-control-lg" id="userAnswer" name="UserAnswer" required autofocus>
                                </div>

                                <button type="submit" class="btn btn-primary btn-lg w-100">Проверить ответ</button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Автоматический фокус на поле ввода при загрузке страницы с вопросом
            const answerInput = document.getElementById('userAnswer');
            if (answerInput) {
                answerInput.focus();
            }

            // Добавляем поддержку Enter для отправки формы
            if (answerInput) {
                answerInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        this.form.submit();
                    }
                });
            }

            // Обновляем описание модели при выборе
            const modelSelect = document.getElementById('embeddingModelSelect');
            if (modelSelect) {
                modelSelect.addEventListener('change', function() {
                    let description = '';
                    switch(this.value) {
                        case 'nomic-embed-text':
                            description = 'Сбалансированная модель для текстовых эмбеддингов, хорошо подходит для большинства задач.';
                            break;
                        case 'all-minilm':
                            description = 'Компактная и быстрая модель, хороша для простых сравнений текстов.';
                            break;
                        case 'mxbai-embed-large':
                            description = 'Большая и точная модель, дает наилучшие результаты но работает медленнее.';
                            break;
                        default:
                            description = 'Выберите модель для анализа вашего ответа.';
                    }
                    // Это просто для UX, не отправляет запрос на сервер
                    console.log('Выбрана модель:', this.value);
                });
            }
        });
    </script>
}